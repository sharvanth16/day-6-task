class Person {
  constructor(name, age, email) {
    this.name = name;
    this.age = age;
    this.email = email;
  }

  introduce() {
    console.log(`Hi, I'm ${this.name}, I'm ${this.age} years old and my email is ${this.email}`);
  }
}

// Create a person object
const person = new Person("xxx", 39, "cdfcdke@example.com");

// Introduce yourself
person.introduce();
